<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/btn_java"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="16dp"
            android:text="Java Code" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/btn_kotlin" app:layout_constraintVertical_chainStyle="packed"/>
    <Button
            android:text="Kotlin Code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_kotlin" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_java" app:layout_constraintStart_toStartOf="@+id/btn_java"
            app:layout_constraintEnd_toEndOf="@+id/btn_java" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>